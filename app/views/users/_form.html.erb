<div class="section">
	<%= form_for @user do |f| %>
	<div class="field">
		<div class="control">
			 <%= f.text_field :name, class: "input", placeholder: "Enter user name" %>
		</div>
	</div>
	<div class="field">
		<div class="control">
			<%= f.password_field :password, class: "input", placeholder: "Enter password" %>
			<%= f.password_field :password_confirmation, class: "input", placeholder: "Enter password" %>
		</div>
	</div>
	<%= f.button :submit, class: "button is-primary" %>	
	<% end %>
</div>