<%= content_for :page_title, 'Login' %>

<div class="section">
	<%= simple_form_for :session do |f| %>
	<div class="field">
		<div class="control">
			<%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
		</div>
	</div>
	<div class="field">
		<div class="control">
			<%= f.input :password, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }  %>
		</div>
	</div>
	<%= f.button :submit, class: "button is-primary" %>	
	<% end %>
	<%= link_to "Register", new_user_path %> 
</div>
